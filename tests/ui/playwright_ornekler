from playwright.sync_api import sync_playwright
with sync_playwright() as p:
    browser = p.chromium.launch(headless=False)
    page = browser.new_page()  #KLASİK HER CASE'DE BULUNACAK 4 MADDE

    page.goto("https://www.btkakademi.gov.tr/portal") #URL GİTME
    print("Başarıyla giriş sağlanmıştır")

    print(page.title()) #başlık yazdırma
    page.wait_for_timeout(4000)

    page.locator("#gbt_index-banner-category-0-title").click()
    page.wait_for_timeout(3000)

    page.get_by_title('Büyük Veriye Giriş').click()
    page.wait_for_timeout(1000)

